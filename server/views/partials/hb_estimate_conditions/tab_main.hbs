<section style="display: none" record_id = "{{#if record_id}}{{record_id}}{{else}}new_record{{/if}}"></section>
<section class="tab_data">
    <details {{#each customer_block_attributes}}{{@key}}={{this}} {{/each}} title="block_customer" data-nesting="1">
        <summary>
            <span recommended>Заказчик</span>
            <span>
                <input name="customer" class="paired_field {{#if customer_block_attributes.data-addfromlist}}{{else}}active_field{{/if}}" type="text" record_id="{{customer}}" value="{{customer_alias}}" placeholder="новая запись" readonly tab_form_field>
                <div class="paired_field {{#if customer_block_attributes.data-addfromlist}}active_field{{/if}}">
                    {{list__customer}}
                </div>
            </span>

            {{#if customer_block_attributes.data-addfromlist_btn}}
                <span class="tab_form_buttons"><div class="tab_btn_addfromlist"><div></div></div></span>
            {{else}}
                <span class="tab_form_btn_plug"></span>
            {{/if}}
        </summary>
        <table class="tab_table">
            {{> blocks/block_customer}}
        </table>
    </details>

    <details {{#each estimate_cond_block_attributes}}{{@key}}={{this}} {{/each}} title="block_estimate_condition" data-nesting="2">
        <summary>
            <span>Схема расчета</span>
            <span>
                <input name="estimate_conditions" class="paired_field {{#if estimate_cond_block_attributes.data-addfromlist}}{{else}}active_field{{/if}}" type="text" record_id="{{estimate_conditions}}" value="{{estcond_title}}" placeholder="новая запись" readonly tab_form_field>
                <div class="paired_field {{#if estimate_cond_block_attributes.data-addfromlist}}active_field{{/if}}">
                    {{list__estimate_conditions}}
                </div>
            </span>


            {{#if estimate_cond_block_attributes.data-addfromlist_btn}}
                <span class="tab_form_buttons"><div class="tab_btn_addfromlist"><div></div></div></span>
            {{else}}
                <span class="tab_form_btn_plug"></span>
            {{/if}}
        </summary>
        <table class='tab_table'>
            {{> blocks/block_estimate_condition}}
        </table>
    </details>
</section>
<br>
{{> comment}}